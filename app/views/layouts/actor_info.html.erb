    <h1>
  Actor #<%= @actor_num %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @actor_name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor_dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor_bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @actor_image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @actor_info_created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @actor_info_updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>
  <% @movies_acted_in.each do |movie_char_info|  %>
    <% movie_info = Movie.where({ :id => movie_char_info.movie_id }).first %>
    <% movie_name = movie_info.title %>
    <% movie_year = movie_info.year %>
    <% director_info = Director.where({ :id => movie_info.director_id }).first %>
    <% director_name = director_info.name %>
    <tr>
      <td>
        <%= movie_name %>
      </td>

      <td>
        <%= movie_year %>
      </td>

      <td>   
        <%= director_name %>
      </td>

      <td>
        <%= movie_char_info.name %>
      </td>

      <td>
        <a href="/movies/<%= movie_char_info.movie_id %>">
          Show details
        </a>
      </td>
    </tr>

  <% end %>
