<h1>
  Director #<%= @dir_details.id %> details
</h1>

<a href="/directors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @dir_details.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @dir_details.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @dir_details.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @dir_details.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @dir_details.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @dir_details.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>


  <% @movies_directed.each do |films_info| %>  

  <tr>
    <td>
      <%= films_info.id %>
    </td>

    <td>
      <img src="<%= films_info.image %>" style="width:250px;">
    </td>

    <td>
      <%= films_info.title %>
    </td>

    <td>
      <%= films_info.year %>
    </td>

    <td>
      <%= @dir_details.name %>
    </td>

    <td>
      <a href="/movies/<%= films_info.id %>">
        Show details
      </a>
    </td>
  </tr>

  <% end %>
</table>
